package T5ejercicios;

import java.util.Scanner;

public class toFahrenheit {
	
	public Scanner sc = new Scanner(System.in);

    public static void main(String[] args) {
    	
        toFahrenheit to = new toFahrenheit();
        double fahrenheit = to.toFahrenheit();
        
    }

    public double toFahrenheit() {
        

        System.out.print("Introduce la temperatura en celsius: ");
        double celsius = sc.nextDouble();

        double fahrenheit = (celsius * 9 / 5) + 32;
        System.out.println("La temperatura en fahrenheit es " + fahrenheit + "ÂºF");	
        return fahrenheit;
    }
    
    public int dibisor() {
    	
    	
    }
    
    
}

