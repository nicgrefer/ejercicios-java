package T5ejercicios;

import java.util.Scanner;


public class Coordenadas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		Scanner sc =new Scanner(System.in);
		Coordenadas coor=new Coordenadas();
		
		System.out.print("Introduce el tamaño del radio: ");
		double R=sc.nextDouble();
		System.out.print("Introduce el ángulo en grados");
		double grados=sc.nextDouble();
		
		coor.PosicionPuntoX(R, grados);
		coor.PosicionPuntoY(R, grados);
		
		System.out.print("La posición del punto esta en "+ x + " x y "+ y + " y");
		
	}

	public int PosicionPuntoX(double radio,double angulo) {
		
		double x;
		
		double radianes= angulo*Math.PI/180;
		
		x= radio*Math.cos(radianes);
		
		
		return(x);
	}
	
	public int PosicionPuntoY(double radio,double angulo) {
		
		double y;
		
		double radianes= angulo*Math.PI/180;
		
		y= radio*Math.sin(radianes);
		
		
		return(y);
	}
	
}
