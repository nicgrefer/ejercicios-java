package T5ejercicios;

import java.util.Scanner;

import T5ejemplos.Operaciones;

public class toFahrenheit {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		toFahrenheit to = new toFahrenheit();
		 to.toFahrenheit();
		
	}

	public double toFahrenheit() {
		Scanner sc = new Scanner(System.in);

		System.out.print("Introduce la temperatura en celsius: ");
		double celsius = sc.nextDouble();

		double fahrenheit = (celsius * 9 / 5 + 32);

		System.out.print("La temperatura en fahrenheit es " + fahrenheit + "ÂºF");
	}
	
}