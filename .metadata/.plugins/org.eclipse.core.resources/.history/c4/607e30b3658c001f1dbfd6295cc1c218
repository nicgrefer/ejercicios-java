package T3ejemplos;

import java.util.Scanner;

public class Rombo {

    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.print("Introduce la longitud de la diagonal mayor del rombo (debe ser un número impar): ");
        int n = teclado.nextInt();
        
        // Validar que el número es impar
        while (n % 2 == 0) {
            System.out.print("Error, introduce un número impar: ");
            n = teclado.nextInt();
        }
        
        int espacios = n / 2;
        int asteriscos = 1;
        
        // Parte superior del rombo
        for (int i = 0; i <= n / 2; i++) {
            for (int j = 0; j < espacios; j++) {
                System.out.print(" ");
            }
            for (int j = 0; j < asteriscos; j++) {
                System.out.print("*");
            }
            System.out.println();
            espacios--;
            asteriscos += 2;
        }
        
        // Parte inferior del rombo
        espacios = 1;
        asteriscos = n - 2;
        for (int i = 0; i < n / 2; i++) {
            for (int j = 0; j < espacios; j++) {
                System.out.print(" ");
            }
            for (int j = 0; j < asteriscos; j++) {
                System.out.print("*");
            }
            System.out.println();
            espacios++;
            asteriscos -= 2;
        }
        
        teclado.close();
    }
}
