package clasesextra;

import java.util.Scanner;

    public static void main(String[] args) {
        ejer1();
        ejer2();
    }

    public static void ejer1() {
        int i = 0;
        int j;
        while (i < 10) {
            j = 0; // Reiniciar j en cada iteraciÃ³n de i
            while (j <= i) {
                System.out.print("*");
                j++;
            }
            System.out.println();
            i++;
        }
    }

    public static void ejer2() {
        int dias = 1;
        while (dias <= 31) {
            System.out.println(dias);
            dias++;
        }
    }

