package T3ejemplos;

import java.util.Scanner;

public class ejemploBucles2 {

	public static void main(String[] args) {
		ejer3();
	}
	// Mostrar los numeros que hay entre el 1 y "N" 
	public static void ejer1() {
		Scanner teclado=new Scanner(System.in);
		int n=1;
		System.out.print("Dame un número entero positivo ");
		int num=teclado.nextInt();
		while(num>n) {
			num--;
			System.out.print(num);
		}
		
	}
	
	//Mostrar los numeros que hay entre 2 balores (N y M)
	public static void ejer2() {
		Scanner teclado=new Scanner(System.in);
		System.out.println("Dame un número entero ");
		int num1=teclado.nextInt();
		System.out.println("Dame otro número entero ");
		int num2=teclado.nextInt();
		
		if (num1<num2) {
			while (num1<=num2) {
				System.out.println(num1);
				num1++;
				
				
			}
			
		}else{
			while(num2<=num1) {
				System.out.println(num2);
				num2++;
				
			}
			
		}
		
	}	
	//Mostrar los pares que hay entre el 1 y el 100, contarlos y sumarlos
	public static void ejer3() {
		int inicio=1;
		int fin=100;
		int aux=0;
		int par=0;
		while(inicio<=fin) {
			inicio++;
			if (inicio%2==0) {
				aux++;
				par=par+inicio;
				System.out.println("El " + inicio + " es par");
			}
			
		}
		System.out.println("Llebamos " + aux +  " pares y la suma entre ellos es " + par);
	}

}
