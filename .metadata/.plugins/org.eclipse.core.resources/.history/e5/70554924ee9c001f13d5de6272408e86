package T5ejercicios;

import java.util.Scanner;

public class ejercicio1 {
	
    public Scanner sc = new Scanner(System.in);
    

    public static void main(String[] args) {
    	
    	ejercicio1 to = new ejercicio1();
    	
        double fahrenheit = to.toFahrenheit();
        
        System.out.print("Introduce un número: ");
        int numeroDado = to.sc.nextInt(); // Usar el scanner del objeto 'to'
        
        int divisor = to.divisor(numeroDado);
        System.out.println("El mayor divisor de " + numeroDado + " es: " + divisor);
        
        boolean par=to.par(numero);
    }
    
    

    public double toFahrenheit() {
        System.out.print("Introduce la temperatura en celsius: ");
        double celsius = sc.nextDouble();

        double fahrenheit = (celsius * 9 / 5) + 32;
        System.out.println("La temperatura en fahrenheit es " + fahrenheit + "ºF");	
        return fahrenheit;
    }
    
    
    
    public int divisor(int numeroDado) {
        for (int i = numeroDado / 2; i > 0; i--) {
            if (numeroDado % i == 0) {
                return i;
            }
        }
        return 1; // Si no se encuentra otro divisor, el mayor es 1
    }
    
    public boolean par(int numero) {
    	return(numero%2==0);
    	
    }
    
    
}
