			}if (n1%3==0) {
				d3++;
				n1=n1/3;
			}if (n1%5==0) {
				d5++;
				n1=n1/5;
			}if (n1%7==0) {
				d7++;
				n1=n1/7;
			}
			
			
		while (n2<0) {
			if (n1%2==0) {
				D2++;
