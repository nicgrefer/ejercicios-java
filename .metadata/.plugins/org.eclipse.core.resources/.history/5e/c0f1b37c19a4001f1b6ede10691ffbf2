package Practica1_Contrase√±as;

import java.security.SecureRandom;
import java.util.Random;
import java.util.Scanner;


public class Pruevas {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	        String dni=""; //dni introducido por el usuario
	        String letras = "TRWAGMYFPDXBNJZSQVHLCKE";
	        char letracorrecta = 0; //letra DNI calculadada
	        //bucle de validacion del dni
	       
	            System.out.print("Introduce un DNI: ");
	            if (dni.length()== 8) {
	                int numerodni = Integer.parseInt(dni.substring(0, 7));

	                int resto = numerodni % 23;
	                letracorrecta = letras.charAt(resto);
	                } else {
	                System.out.println("DIN: "+ dni + letracorrecta);
	                }
	            
	            
	            
	        
	}
}