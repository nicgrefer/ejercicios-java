		System.out.println("Introduce una fecha distinta a la de hoy(dd/MM/yyyy):");
		String fechaS=teclado.nextLine();
		LocalDate fecha = LocalDate.parse(fechaS);
		 
		try {
       	             
			DateTimeFormatter dtf=DateTimeFormatter.ofPattern("dd/MM/yyyy");
            LocalDate naces=LocalDate.parse(fechaS, dtf);
            System.out.print("hay una diferencia entre");
			System.out.print(Period.between(fecha, hoy).getMonths() + " a√±os, " );
            System.out.print(Period.between(fecha, hoy).getMonths() + " meses y " );
    		System.out.println(Period.between(fecha, hoy).getDays() + " dias " );
            
       } catch (DateTimeParseException ex){
       	System.err.print("Error, fecha no valida");
       }
      
		
	}

