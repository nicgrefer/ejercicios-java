package T6ejercicios.persona;

import java.time.LocalDate;

public class App {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Persona persona=new Persona();
		App app=new App();
		app.pedirDatos();
		
	}

	private void pedirDatos() {
		// TODO Auto-generated method stub
		Persona persona=new Persona();
		System.out.println("Introduzca en lombre");
		persona.getNombre();

		System.out.println("Introduzca el  apellido");
		persona.getApellidos();
		
		System.out.println("Introduzca el dni");
		persona.getDni();
		
		System.out.println("Introduzca sexo(h=hombre/m=mujer)");
		persona.getSexo();

		System.out.println("Introduzca la fecha de nacimiento");
		persona.getFechaNacimiento();
		
		System.out.println("Introduzca la edad en años");
		persona.getEdadEnAños();
		
		System.out.println("Introduzca la altura en cm");
		persona.getAlturaEnCentimetros();
		
		System.out.println("Introduzca el peso en Kg");
		persona.getPesoEnKg();
		
		System.out.println("Introduzca si esta casado con true o false");
		persona.isCasado();
	}


	
}
